<%-include("../layout/header");%>
<div style="background-color: #c3bebe; padding:20px" class="container-fluid">
    <div style="background-color: #fff; border-radius: 10px; padding:20px" class="container">
        <br>
            <% if (error=='') { %>
                <%} else { %>
                    <div id="div-msg-warning" class="alert alert-danger">
                        <%=error %>
                    </div>
            <% } %>
              <div class="col-md-6 offset-md-3">
                <hr>
                <h3>ALTERAR SENHA</h3>
                <hr>
              <form id="form-recoverypassword" action="/user/recoverypassword" method="POST" enctype="application/x-www-form-urlencoded">

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input name="password" required max-length="20" type="password" id="form1Example2" class="form-control" />
                  <label class="form-label" for="form1Example2">Digite aqui sua nova senha</label>
                </div>
              
                <!-- Submit button -->
                <button type="submit" class="btn btn-success btn-block">Altera senha</button>
              </form>
              <script>
                function setUrl() {
                  let form = document.querySelector("#form-recoverypassword")
                  form.setAttribute("action",`${window.location.pathname}?_method=PUT`)
                }
                document.onload = setUrl()
              </script>
            </div>
            </div>
        </div>
    </div>
</div>
<%-include("../layout/footer");%>